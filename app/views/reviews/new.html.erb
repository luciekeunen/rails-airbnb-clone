<div class="container">
  <div class="col-xs-8 col-xs-offset-2">
    <h1 class="text-center" style="color: #44707E;">Add a review</h1>
    <%= simple_form_for [@collection_item, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, as: :select, collection: 0..5 %>
      <%= f.button :submit, class: "submit-form" %>
    <% end %>
  </div>
</div>
