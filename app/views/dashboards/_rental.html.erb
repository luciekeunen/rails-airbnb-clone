<div class="message">
  <%= image_tag 'book.png' %>
  <div class="message-name">
    <h3><%= reservation.collection_item.profile.first_name %></h3>
    <p><%= reservation.created_at %></p>
  </div>
  <div class="message-body">
    <p>Reservation for <strong><%= reservation.collection_item.book.title %></strong></p>
    <p>
      <p>From <%= reservation.start_day %> to <%= reservation.end_day %></p>
    </p>
  </div>
  <div class="message-status">
    <% if reservation.status == "pending" %>
      <p class="status pending">Pending</p>
    <% elsif reservation.status == "accepted" %>
      <p class="status accepted">Accepted</p>
    <% else %>
      <p class="status declined">Declined</p>
    <% end %>
    <p class="price text-center"><%= reservation.final_price %> â‚¬</p>
  </div>
</div>
